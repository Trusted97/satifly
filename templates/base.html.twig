<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Satifly{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" href="{{ asset('images/favicon.ico') }}" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
        }
        header {
            border-bottom: 1px solid rgba(0,0,0,.1);
        }
        .brand-title {
            font-weight: 600;
            color: #212529;
        }
        .brand-subtitle {
            font-size: 0.95rem;
            color: #6c757d;
        }
        .alert {
            animation: fadeIn .4s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-6px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>

<body>
<!-- Flash Messages -->
<div class="container mt-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm" role="alert">
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        {% if label == 'success' %}
                            ‚úÖ
                        {% elseif label == 'danger' %}
                            ‚ö†Ô∏è
                        {% elseif label == 'warning' %}
                            ‚ö°
                        {% else %}
                            ‚ÑπÔ∏è
                        {% endif %}
                    </div>
                    <div>{{ message }}</div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<!-- Header -->
{% block header %}
    <header class="bg-white py-4 shadow-sm mb-4">
        <div class="container d-flex flex-column flex-md-row align-items-md-center justify-content-between">
            <div>
                <h1 class="h4 brand-title mb-1">üêò Satifly</h1>
                <p class="brand-subtitle mb-0">Private PHP Package Manager</p>
            </div>
            <div class="d-flex flex-column flex-sm-row gap-2 mt-3 mt-md-0">
                <a href="{{ path('index') }}" class="btn btn-outline-primary btn-sm px-3">
                    Go to Satis Registry
                </a>
                {% if isAuthEnabled and is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('logout') }}" class="btn btn-outline-danger btn-sm px-3">
                        Logout
                    </a>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock %}

<!-- Main Content -->
<main class="container mb-5">
    {% block content %}{% endblock %}
</main>

<!-- Footer -->
<footer class="text-center text-muted small py-3 border-top">
    <div>Satifly ‚Äî Built with Symfony, Coffee & ‚ù§Ô∏è</div>
</footer>

<!-- Bootstrap JS -->
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% block javascript %}{% endblock %}

</body>
</html>
