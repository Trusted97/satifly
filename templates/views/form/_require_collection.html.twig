<div id="require-collection"
     class="require-collection border rounded p-3"
     data-prototype="{{ form_widget(form.require.vars.prototype)|e('html_attr') }}"
     data-prototype-name="{{ form.require.vars.prototype.vars.name }}"
     data-allow-add="1"
     data-allow-remove="1"
     data-name-prefix="{{ form.require.vars.full_name }}">

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0">Required Packages</h5>
        <button type="button"
                class="btn btn-sm btn-outline-primary add-item"
                id="add-require-item">
            + Add Package
        </button>
    </div>

    <div class="require-items">
        {# Render existing items (each one is a PackageConstraintType) #}
        {% for constraintForm in form.require %}
            <div class="collection-item package-constraint-item mb-2 p-2 border rounded bg-light">
                <div class="row g-2 align-items-center">
                    <div class="col-md-6">
                        {{ form_row(constraintForm.package) }}
                    </div>
                    <div class="col-md-5">
                        {{ form_row(constraintForm.constraint) }}
                    </div>
                    <div class="col-md-1 text-end">
                        <button type="button"
                                class="btn btn-outline-danger btn-sm remove-item"
                                title="Remove constraint">
                            &times;
                        </button>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-muted small mb-0">No packages added yet.</p>
        {% endfor %}
    </div>
</div>
