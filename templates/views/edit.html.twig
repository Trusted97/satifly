{% extends "base.html.twig" %}

{% set repository = form.vars.value %}

{% block title %}Edit Repository{% endblock %}

{% block content %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <a href="{{ path('admin') }}">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Edit Repository
            </li>
        </ol>
    </nav>

    <div class="container-fluid px-0">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h2 class="h5 mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                    </svg>
                    Edit Repository
                </h2>
            </div>


            <div class="card-body">
                {{ form_start(form, {'attr': {'id': 'edit_repository', 'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                {{ form_errors(form) }}

                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        {{ form_row(form.name, {
                            label: 'Repository Name',
                            attr: {'placeholder': 'e.g. my-vendor/package'}
                        }) }}
                    </div>

                    <div class="col-12 col-md-6">
                        {{ form_row(form.type, {
                            label: 'Repository Type',
                            help: 'Example: vcs, composer, pathâ€¦'
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(form.url, {
                            label: 'Repository URL',
                            attr: {'placeholder': 'https://github.com/vendor/package'}
                        }) }}
                    </div>

                    <div class="col-12 col-md-6">
                        {{ form_row(form.installationSource, {
                            label: 'Installation Source',
                            help: 'Choose how Composer installs this repository.'
                        }) }}
                    </div>

                    <div class="col-12 col-md-6 d-flex align-items-center pt-4">
                        <div class="form-switch mt-2">
                            {{ form_widget(form.fullUpdate, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.fullUpdate, 'Enable Full Update', {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column flex-md-row gap-2 justify-content-end mt-4">
                    <button class="btn btn-primary btn-lg w-100 w-md-auto" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy me-1" viewBox="0 0 16 16">
                            <path d="M11 2H9v3h2z"/>
                            <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z"/>
                        </svg>
                        Update
                    </button>
                    <a href="{{ path('repository_delete', { 'repository': repository.id }) }}"
                       class="btn btn-outline-danger btn-lg w-100 w-md-auto"
                       onclick="return confirm('Are you sure you want to delete this repository?');">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg>

                        Delete
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}
